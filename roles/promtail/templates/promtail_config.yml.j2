server:
  http_listen_port: {{ promtail.ports.http_listen_port }}
  grpc_listen_port: {{ promtail.ports.grpc_listen_port }}

positions:
  filename: {{ promtail_home_dir }}/positions.yml

clients:
  - url: http://142.93.221.79:3100/loki/api/v1/push

scrape_configs:
  - job_name: custom_logs
    static_configs:
      - targets:
        - localhost
        labels:
          job: custom_logs
          host: {{ ansible_hostname }}
          __path__: /opt/*/log/*
