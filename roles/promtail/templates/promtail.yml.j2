server:
  http_listen_port: {{ promtail.ports.http_listen_port }}
  grpc_listen_port: {{ promtail.ports.grpc_listen_port }}

positions:
  filename: {{ promtail_position_file_path }}

clients:
  - url: http://{{ monitor_server_dns }}:3100/loki/api/v1/push

scrape_configs:
  - job_name: opt_logs
    static_configs:
      - targets:
        - localhost
        labels:
          job: opt_logs
          host: {{ ansible_hostname }}
          env: {{ type }}
          __path__: /opt/*/log/*.log
          __path_exclude__: /opt/*/log/*.*.log

  - job_name: authlogs
    static_configs:
      - targets:
        - localhost
        labels:
          job: authlogs
          host: {{ ansible_hostname }}
          __path__: /var/log/auth.log
  
  - job_name: ufwlogs
    static_configs:
      - targets:
        - localhost
        labels:
          job: ufwlogs
          host: {{ ansible_hostname }}
          __path__: /var/log/ufw.log

  - job_name: fail2banlogs
    static_configs:
      - targets:
        - localhost
        labels:
          job: fail2banlogs
          host: {{ ansible_hostname }}
          __path__: /var/log/fail2ban.log

  - job_name: auditlogs
    static_configs:
      - targets:
        - localhost
        labels:
          job: auditlogs
          host: {{ ansible_hostname }}
          __path__: /var/log/audit/audit.log

  - job_name: syslogs
    static_configs:
      - targets:
        - localhost
        labels:
          job: syslogs
          host: {{ ansible_hostname }}
          __path__: /var/log/syslog
