[Unit]
Description=Promtail service
After=network.target

[Service]
Type=simple
User={{ service_identifier }}
Group={{ service_identifier }}
ExecStart={{ promtail_bin_dir }}/promtail -config.file {{ promtail_config_dir }}/promtail.yml

Restart=always
RestartSec=4
LimitNOFILE=65536
StandardOutput=append:{{ promtail_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target