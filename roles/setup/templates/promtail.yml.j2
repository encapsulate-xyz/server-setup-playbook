server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /etc/promtail/positions.yml

clients:
  - url: http://{{ loki_instance_ip }}/loki/api/v1/push

scrape_configs:
  - job_name: journal
    journal:
      max_age: 12h
      labels:
        job: systemd-journal
        host: {{ ansible_hostname }}
    relabel_configs:
      - source_labels: ["__journal__systemd_unit"]
        target_label: "unit"

  - job_name: authlogs
    static_configs:
      - targets:
        - localhost
        labels:
          job: authlogs
          host: {{ ansible_hostname }}
          __path__: /var/log/auth.log

  - job_name: fail2banlogs
    static_configs:
      - targets:
        - localhost
        labels:
          job: fail2banlogs
          host: {{ ansible_hostname }}
          __path__: /var/log/fail2ban.log

  - job_name: auditlogs
    static_configs:
      - targets:
        - localhost
        labels:
          job: auditlogs
          host: {{ ansible_hostname }}
          __path__: /var/log/audit/*.log

  - job_name: syslogs
    static_configs:
      - targets:
        - localhost
        labels:
          job: syslogs
          host: {{ ansible_hostname }}
          __path__: /var/log/syslog
