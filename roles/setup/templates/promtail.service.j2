[Unit]
Description=Promtail service
After=network.target

[Service]
Type=simple
User={{{ promtail.user }}
ExecStart={{ promtail.bin_dir }}/promtail -config.file {{ promtail.config_dir }}/promtail.yml

Restart=always
RestartSec=4
LimitNOFILE=65536
StandardOutput=append:{{ promtail.log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target